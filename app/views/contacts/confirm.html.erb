<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
<h3>以下の内容で、送信する。</h3>

<%= form_for(@contact) do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :mail %>
　<%= f.hidden_field :content %>
　
  <p>Name:<%= @contact.name %></p>
  <p>mail:<%= @contact.mail %></p>
   <p>content:<%= @contact.content %></p>
  <%= f.submit "送信する",class: 'btn btn-primary btn-block' %>
<% end %>

<%= form_for(@contact, url: new_contact_path, method: 'get') do |f| %>
  <%= f.hidden_field :name %>
  <%= f.hidden_field :mail %>
　<%= f.hidden_field :content %>
  <%= f.submit "もどる", name: 'back',class: 'btn btn-primary btn-block' %>
<% end %>
  </div>
</div>