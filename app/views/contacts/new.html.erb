<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
<h3>お問い合わせフォーム</h3>
<p id="notice"><%= notice %></p>
<%= form_for(@contact, url: confirm_contacts_path) do |f| %>
<% if @contact.errors.any? %>
    <div id="error_explanation">
      <h3><%= @contact.errors.count %>件のエラーがあります。</h3>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br>
  <%= f.label :mail %>
  <%= f.text_field :mail %>
  <br>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit "お問い合わせをする",class: 'btn btn-primary btn-block' %>
 

  
  
  <%= link_to "ブログ一覧画面にもどる", blogs_path %>
<% end %>
</div>
</div>
